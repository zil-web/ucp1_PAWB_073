<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Pupuk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Data Pupuk</h1>

        <!-- Form Tambah Pupuk -->
        <form action="/pupuk/add" method="POST" class="mb-4">
            <div class="mb-3">
                <label for="nama" class="form-label">Nama Pupuk</label>
                <input type="text" id="nama" name="nama" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="jenis" class="form-label">Jenis Pupuk</label>
                <input type="text" id="jenis" name="jenis" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="harga" class="form-label">Harga Pupuk</label>
                <input type="number" id="harga" name="harga" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
        </form>

        <!-- Daftar Pupuk -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nama</th>
                    <th>Jenis</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% pupuk.forEach((item, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.nama %></td>
                    <td><%= item.jenis %></td>
                    <td><%= item.harga %></td>
                    <td>
                        <form action="/pupuk/delete/<%= item.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
