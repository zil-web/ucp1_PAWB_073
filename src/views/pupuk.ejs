<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Input Data Pupuk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Input Data Pupuk</h1>

        <!-- Form Tambah Pupuk -->
        <form action="/pupuk" method="POST" class="mb-5">
            <div class="mb-3">
                <label for="id" class="form-label">ID Pupuk</label>
                <input type="number" id="id" name="id" class="form-control" placeholder="Masukkan ID Pupuk" required>
            </div>
            <div class="mb-3">
                <label for="nama" class="form-label">Nama Pupuk</label>
                <input type="text" id="nama" name="nama" class="form-control" placeholder="Masukkan Nama Pupuk" required>
            </div>
            <div class="mb-3">
                <label for="jenis" class="form-label">Jenis Pupuk</label>
                <input type="text" id="jenis" name="jenis" class="form-control" placeholder="Masukkan Jenis Pupuk" required>
            </div>
            <div class="mb-3">
                <label for="harga" class="form-label">Harga Pupuk</label>
                <input type="number" id="harga" name="harga" class="form-control" placeholder="Masukkan Harga Pupuk" required>
            </div>
            <button type="submit" class="btn btn-success">Simpan</button>
            <a href="/" class="btn btn-secondary">Kembali ke Home</a>
        </form>
        

        <!-- Daftar Pupuk -->
        <h2>Daftar Pupuk</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nama Pupuk</th>
                    <th>Jenis Pupuk</th>
                    <th>Harga Pupuk</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% pupuk.forEach((item, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.nama %></td>
                    <td><%= item.jenis %></td>
                    <td><%= item.harga %></td>
                    <td>
                        <form action="/pupuk/delete/<%= item.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
